<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info', user: @user %>
      <%= render 'books/under', book: @new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr id="book_<%= @book.id %>">
            <td>
              <%= link_to user_path(@user) do%>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
              <br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do%>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td class="favorite-btn"><%= render "favorites/favorite-btn", book: @book %></td>
            <td>
              <p>コメント数：<%= @book.book_comments.count %></p>
            </td>

            <td>
              <% if @book.user_id == current_user.id %>
                <%= link_to edit_book_path(@book) do %>
                <button class="btn btn-sm btn-success">Edit</button>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if @book.user_id == current_user.id %>
                <%= link_to book_path(@book), method: :delete do %>
                <button class="btn btn-sm btn-danger">Destroy</button>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <table>
        <tbody>

          <% if @comment.errors.any? %>
          <div id="error_explanation">

          <%=  @comment.errors.count %>errors<br>
            <ul><%  @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
          </div>


            <% @book.book_comments.each do |book_comment| %>
            <% user = User.find(book_comment.user_id) %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
                <%= book_comment.user.name %>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user %>
                <div>
                  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                </div>
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>


      <div>
      <%= form_with model:[@book,@comment] do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder: "" %><br>
      <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
