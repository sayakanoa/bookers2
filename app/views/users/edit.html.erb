<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>

  <label for="inputProfile">Introduction</label>
  <%= f.text_area :name, autofocus: true, id:"inputProfile", placeholder:"introduction"%>
  <%= f.submit "Update user" %>
<% end %>